<Window x:Class="QuestionnaryGame.ScoreboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scoreboard" Height="400" Width="600" Background="#30383d" Foreground="Gold" FontSize="17">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Scoreboard" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="30"/>

        <ListBox Grid.Row="1" Name="ScoreboardList" Background="#30383d" Foreground="Gold" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Top">
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Quit" Width="150" Margin="10" Background="#1a3747" Foreground="Gold" BorderBrush="Gold" BorderThickness="2" Click="Quit_Click"/>
            <Button Content="Play Again" Width="150" Margin="10" Background="#1a3747" Foreground="Gold" BorderBrush="Gold" BorderThickness="2" Click="PlayAgain_Click"/>
        </StackPanel>
    </Grid>
</Window>
